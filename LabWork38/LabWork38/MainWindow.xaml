<Window x:Class="LabWork38.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork38"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="26"/>
                <RowDefinition Height="26"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Content="Поиск:" Grid.Column="0" Grid.Row="1"/>
            <TextBox x:Name="SearchTextBox" Text="*.blend" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="1" Margin="0,0,10,0" />

            <Label Content="Путь к папке:" Grid.Column="0"/>
            <TextBox x:Name="directoryTextBox" Text="D:\Екимов Вячеслав\Models" VerticalAlignment="Center"  Grid.Column="1" Margin="0,0,10,0" />
        </Grid>

        <DataGrid x:Name="resultDataGrid" Grid.Row="1"/>
    </Grid>
</Window>
