<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Логин"  FontFamily="/Fonts/#Lobster"/>
        <TextBox x:Name="LoginTextBox" Grid.Column="1"/>
        <Label Content="Пароль"  Grid.Row="1"  FontFamily="/Fonts/#Lobster"/>
        <TextBox x:Name="PasswordTextBox" Grid.Row="1" Grid.Column="1"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" >
            <Button x:Name="OkButton" Content="OK" FontFamily="/Fonts/#Lobster"/>
            <Button x:Name="CancelButton" Content="Отмена" FontFamily="/Fonts/#Lobster"/>
            <Image Source="Image/galaxy.jpg" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
